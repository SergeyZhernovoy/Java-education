<web-app>
        <filter>
            <filter-name>AuthFilter</filter-name>
            <filter-class>ru.szhernovoy.controllers.AuthFilter</filter-class>
        </filter>

        <filter-mapping>
            <filter-name>AuthFilter</filter-name>
            <url-pattern>*</url-pattern>
        </filter-mapping>

        <servlet>
            <servlet-name>main</servlet-name>
            <servlet-class>ru.szhernovoy.controllers.MainController</servlet-class>
        </servlet>

        <servlet-mapping>
            <servlet-name>main</servlet-name>
            <url-pattern>/main</url-pattern>
        </servlet-mapping>

        <servlet>
            <servlet-name>create</servlet-name>
            <servlet-class>ru.szhernovoy.controllers.UserCreate</servlet-class>
        </servlet>

        <servlet-mapping>
            <servlet-name>create</servlet-name>
            <url-pattern>/create</url-pattern>
        </servlet-mapping>

        <servlet>
            <servlet-name>delete</servlet-name>
            <servlet-class>ru.szhernovoy.controllers.UserDelete</servlet-class>
        </servlet>

        <servlet-mapping>
            <servlet-name>delete</servlet-name>
            <url-pattern>/delete</url-pattern>
        </servlet-mapping>

        <servlet>
            <servlet-name>update</servlet-name>
            <servlet-class>ru.szhernovoy.controllers.UserUpdate</servlet-class>
        </servlet>

        <servlet-mapping>
            <servlet-name>update</servlet-name>
            <url-pattern>/update</url-pattern>
        </servlet-mapping>

        <servlet>
            <servlet-name>Singin</servlet-name>
            <servlet-class>ru.szhernovoy.controllers.SinginController</servlet-class>
        </servlet>

        <servlet-mapping>
            <servlet-name>Singin</servlet-name>
            <url-pattern>/signin</url-pattern>
        </servlet-mapping>

</web-app>